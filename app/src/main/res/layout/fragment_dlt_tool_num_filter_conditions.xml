<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/step1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="第1步："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <zilu.lottery.analysis.widget.MyRadioGroup
        android:id="@+id/step1RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/step1Label"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rpRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前区" />

        <RadioButton
            android:id="@+id/bpRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后区" />

    </zilu.lottery.analysis.widget.MyRadioGroup>

    <TextView
        android:id="@+id/step2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="第2步："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step1RadioGroup" />

    <zilu.lottery.analysis.widget.MyRadioGroup
        android:id="@+id/rpRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/step2Label"
        app:layout_constraintTop_toBottomOf="@id/step1RadioGroup">

        <RadioButton
            android:id="@+id/rp7Radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7分区" />

        <RadioButton
            android:id="@+id/rp5Radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5分区" />
    </zilu.lottery.analysis.widget.MyRadioGroup>

    <zilu.lottery.analysis.widget.MyRadioGroup
        android:id="@+id/bpRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/step2Label"
        app:layout_constraintTop_toBottomOf="@id/step1RadioGroup"
        tools:visibility="invisible">

        <RadioButton
            android:id="@+id/bp4Radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4分区" />

    </zilu.lottery.analysis.widget.MyRadioGroup>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/step2Barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="rpRadioGroup,bpRadioGroup"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/step3Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="第3步："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step2Barrier" />

    <Button
        android:id="@+id/partitionTypeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:minHeight="0dp"
        android:text="点击选择区类型"
        app:layout_constraintStart_toEndOf="@id/step3Label"
        app:layout_constraintTop_toTopOf="@id/step2Barrier" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="下一步"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>