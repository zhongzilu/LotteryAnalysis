<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <zilu.lottery.analysis.widget.MyFilterSpinner
        android:id="@+id/filterSpinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DFDEDE"
        app:layout_constraintTop_toBottomOf="@id/filterSpinner" />

    <com.bin.david.form.core.SmartTable
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterSpinner" />

    <!--    android:drawableStart="@drawable/ic_help_24dp"-->

    <zilu.lottery.analysis.widget.MaxHeightNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:maxHeight="200dp">

        <TextView
            android:id="@+id/readmeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:padding="5dp"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="解释说明"
            tools:visibility="visible" />

    </zilu.lottery.analysis.widget.MaxHeightNestedScrollView>

</LinearLayout>