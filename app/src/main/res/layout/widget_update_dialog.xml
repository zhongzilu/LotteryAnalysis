<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:background="@android:color/white">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/appPrimaryTextColor"
        android:textSize="18sp"
        tools:text="软件更新提示" />

    <TextView
        android:id="@+id/dialogSecondTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        tools:text="版本号: 1.0" />

    <TextView
        android:id="@+id/dialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogSecondTitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="start"
        android:textColor="@color/appPrimaryTextColor"
        tools:text="1.新增XXXX功能\n2.优化已知问题" />

    <ProgressBar
        android:id="@+id/dialogDownloadProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogContent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        tools:max="100"
        tools:progress="50"
        tools:visibility="visible" />

    <View
        android:id="@+id/dialogLineH"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dialogDownloadProgress"
        android:background="#ddd" />

    <View
        android:id="@+id/dialogLineV"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_below="@id/dialogLineH"
        android:layout_centerHorizontal="true"
        android:background="#ddd" />

    <Button
        android:id="@+id/dialogCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogLineH"
        android:layout_alignBottom="@id/dialogLineV"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/dialogLineV"
        android:background="?attr/selectableItemBackground"
        android:text="@string/dialog_cancel_text" />

    <Button
        android:id="@+id/dialogConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogLineH"
        android:layout_alignBottom="@id/dialogLineV"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/dialogLineV"
        android:background="?attr/selectableItemBackground"
        android:text="@string/dialog_confirm_text"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>