<resources>
    <declare-styleable name="MyTabLayout">
        <attr name="tabItems" format="reference" />
        <attr name="tabSelectMode" format="flags">
            <flag name="none" value="0" />
            <flag name="selected" value="1" />
        </attr>
        <attr name="tabSelectPosition" format="integer" />
    </declare-styleable>

    <declare-styleable name="ReleaseBallView">
        <attr name="ballRedBackground" format="reference|color" />
        <attr name="ballBlueBackground" format="reference|color" />
        <attr name="ballSize" format="dimension" />
        <attr name="ballText" format="color" />
        <attr name="ballTextColor" format="color" />
        <attr name="ballTextSize" format="dimension" />
        <attr name="ballSpace" format="dimension" />
        <!--        <attr name="ballPadding" format="dimension" />-->
        <!--        <attr name="ballPaddingStart" format="dimension" />-->
        <!--        <attr name="ballPaddingEnd" format="dimension" />-->
        <!--        <attr name="ballPaddingTop" format="dimension" />-->
        <!--        <attr name="ballPaddingBottom" format="dimension" />-->
        <!--        <attr name="ballMargin" format="dimension" />-->
        <!--        <attr name="ballMarginStart" format="dimension" />-->
        <!--        <attr name="ballMarginEnd" format="dimension" />-->
        <!--        <attr name="ballMarginTop" format="dimension" />-->
        <!--        <attr name="ballMarginBottom" format="dimension" />-->
        <attr name="ballGravity" format="flags">
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="ballRedLimit" format="integer" />
        <attr name="ballBlueLimit" format="integer" />
        <attr name="ballRedBlueSpace" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MaxHeightNestedScrollView">
        <attr name="android:maxHeight"/>
    </declare-styleable>
</resources>